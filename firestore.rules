rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if the user is accessing their own data path
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Match the users collection
    match /users/{userId} {
      // Allow users to read/write their own user document
      allow read, write: if isOwner(userId);

      // Allow users to read/write any subcollections (chats, lifelogs, folders, etc.)
      // This covers /users/{userId}/chats/{chatId}, /users/{userId}/folders/{folderId}, etc.
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
